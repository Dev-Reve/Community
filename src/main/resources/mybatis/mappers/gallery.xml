<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.gallery">
	
	<resultMap id="galleryResult" type="galleryVO">
		<result property="no" column="no" />
		<result property="title" column="title" />
		<result property="content" column="content"/>
		<result property="writeDate" column="writeDate"/>
		<result property="nickname" column="nickName" />
		<result property="readCount" column="readCount"/>
		<result property="fileName" column="fileName"/>
		<result property="fileRealName" column="fileRealName"/>
	</resultMap>
	
	<insert id="insertGallery" parameterType="java.util.Map">
		<![CDATA[
			INSERT INTO GALLERY ( no, title,content,nickName, fileName )
			values(gallery_no.nextval, #{title}, #{content}, #{nickName}, StringArray(
		]]>
		<foreach collection="fileList" item="fileName" separator=", " close="))">
		#{fileName}
		</foreach>
	</insert>

	<select id="getInsertedNo" resultType="int">
		<![CDATA[
			select MAX(no) from gallery
		]]>	
	</select>
	
	<select id="getRecentGallery" resultMap="galleryResult">
	  <![CDATA[
	     SELECT no, title, nickName, fileName, readCount
	     FROM (
	       SELECT * FROM GALLERY 
	       ORDER BY no DESC 
	     ) 
	     WHERE ROWNUM <= 3
	   ]]>
	</select>
	
	<select id= "GallerylIST" resultMap="galleryResult">
		<![CDATA[
		SELECT * FROM GALLERY ORDER BY NO DESC	
		]]>
	</select>
	
	<select id="GalleryInfo" resultMap="galleryResult" parameterType="int">
		<![CDATA[
		SELECT * FROM GALLERY
		WHERE no = #{no} 
		]]>
	
	</select>
	<update id="gallCount" parameterType="int">
		<![CDATA[
		UPDATE gallery
			SET readCount = readCount + 1
		WHERE no = #{no} 
		]]>	
	</update>
	
	<delete id="deleteGallery" parameterType="int">
		<![CDATA[
		DELETE gallery
			where no = #{no}
		]]>	
	</delete>
</mapper>